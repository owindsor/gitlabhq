!!! 5
%html{ :lang => "en"}
  = render "layouts/head"
  %body.project
    = render "layouts/flash"
    = render "layouts/head_panel", :title => @project.name
    .container
      = render :partial => "layouts/project_menu"
      .content
        - if @full_content
          = yield
        - else
          .row
            .span12= yield
            .sidebar= render "layouts/project_side_right"

